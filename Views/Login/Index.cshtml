@model MillionaireWinnerPicker.Models.User
@{
    ViewBag.Title = "Log in";
    //Layout = "";
}

<h2>@ViewBag.Title</h2>
@*<div class="row">
    <div class="col-10">*@
@using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                  
                    <span class="login100-form-logo">
                      
                        <img src="~/Images/FcmbImage.jpg" />
                       
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Millionaire Winner Picker
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input class="input100" type="text" name="UserId" placeholder="Username">
                       
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" name="Password" placeholder="Password">
                       
                        <span class="focus-input100" data-placeholder="&#xf191;">
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" value="Log in">
                            Log In
                        </button>
                    </div>

                    @*}*@
                </form>
            </div>
        </div>
    </div>
 }
@*</div>
    </div>*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
